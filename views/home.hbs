<header class="masthead">
    <div class="container roll d-flex position-relative">
        <div class="col-xl-6">
            <div class="text-center text-white">
                <h1 class="mb-6">All oficial and real-time weather information in just one site!</h1>
            </div>
        </div>
        <div class="main-div3 align-self-center col-sm-5">
            <div class="first-div1">
                <a class="city-link"
                    href="/results/city/{{cityDetails.location.name}}+{{cityDetails.location.country}}">{{cityDetails.location.name}}</a>
                <p class="hour"><i class="bi bi-clock"> </i>{{dayOfTheWeek}}, {{dateString}} -
                    {{cityDetails.location.localtime}}</p>
            </div>
            <div class="second-div1 pb-4">
                <div class="image-div">
                    <img class="status-icon" src="{{cityDetails.current.condition.icon}}" />
                </div>
                <div class="status-div">
                    <p class="grades">{{cityDetails.current.temp_c}}ยบ C</p>
                    <p class="status mb-3">{{cityDetails.current.condition.text}}</p>
                    <p class="status"><i class="bi bi-cloud-minus-fill"></i> {{day1.day.mintemp_c}}ยบ C - <i class="bi bi-cloud-plus-fill"></i>  {{day1.day.maxtemp_c}}ยบ C</p>
                </div>
            </div>
            <div class="third-div1">
                <div class="headers">
                    <p class="weat-elem">Wind</p>
                    <p class="weath-value"><i class="bi bi-wind"></i> <span class=""> {{cityDetails.current.wind_kph}}
                            kph</span></p>
                </div>
                <div class="headers">
                    <p class="weat-elem">Humidity</p>
                    <p class="weath-value"> <i class="bi bi-droplet-fill"></i> <span class="">
                            {{cityDetails.current.humidity}} %</span></p>
                </div>
                <div class="headers">
                    <p class="weat-elem">Clouds</p>
                    <p class="weath-value"><i class="bi bi-cloud-fill"></i> <span class="">
                            {{cityDetails.current.cloud}} %</span></span></p>
                </div>
            </div>
        </div>
    </div>
    </div>
</header>

